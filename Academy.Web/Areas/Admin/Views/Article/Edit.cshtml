@model Academy.Domain.ViewModels.Article.EditArticleViewModel
@using Academy.Application.FilePath;

@{
    ViewData["Title"] = "ویرایش مقاله";
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('Description', {
            customConfig: '/lib/js/Config.js'
        });

    </script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <form asp-area="Admin" asp-controller="Article" asp-action="Edit" class="form-horizontal" enctype="multipart/form-data">
                    <input type="hidden" value="@Model.ArticleId" asp-for="ArticleId" />
                   
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control">
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-sm-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Slug" class="col-sm-2 col-md-6 control-label"></label>
                                    <input asp-for="Slug" class="form-control">
                                </div>
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-2 col-md-6 control-label">تصویر فعلی</label>
                                    <div class="input-group mb-3">

                                        <img class="img-thumbnail" src="@(FilePaths.ArticleThumbPath + Model.ImageName)" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="NewImage" class="col-sm-2 control-label"></label>
                                    <input asp-for="NewImage" class="form-control">
                                </div>

                            </div>
                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="ShortDescription" class="col-sm-2 control-label"></label>
                                    <textarea asp-for="ShortDescription" class="form-control"></textarea>
                                </div>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>متن مقاله</label>
                                    <textarea asp-for="Description" rows="10"></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-warning btn-block">ویرایش اطلاعات</button>
                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>