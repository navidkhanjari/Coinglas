
@{
    ViewData["Title"] = "فعالسازی حساب کاربری";
}
<div class="back-to-home rounded d-none d-sm-block">
    <a asp-controller="Home" asp-action="Index" class="btn btn-icon btn-soft-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home icons"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a>
</div>
@if (ViewBag.isActive == true)
{
    <section class="bg-home bg-light d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="text-center">

                        <h1 class="my-4 fw-bold text-success">موفق</h1>
                        <p class="text-muted para-desc mx-auto text-success">حساب کاربری شما فعال شد!</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-soft-primary mt-3">ورود </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="bg-home bg-light d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="text-center">

                        <h1 class="my-4 fw-bold text-danger">ناموفق</h1>
                        <p class="text-muted para-desc mx-auto text-success">کاربری یافت نشد!</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-soft-primary mt-3">برو به صفحه اصلی </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}