@model Academy.Domain.ViewModels.Account.InformationUserPanelViewModel
@using Academy.Application.Utils.Convertors;
<section class="bg-profile d-table w-100 bg-primary" style="background: url('site/images/account/bg.png') center center;">
    <div class="container">
        <div class="row">
            @if (ViewBag.IsSuccess == true)
            {
                <div id="alert-RePass" class="alert alert-success alert-dismissible fade show" role="alert">
                    رمز عبور شما با موفقیت تغییر کرد!
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
                </div>
                <script>
                let delay = 2000;
                let url = "https://localhost:44391/Account";
                setTimeout(function () {
                    location = url;

                }, 2000)
                </script>
            }
            <div class="col-lg-12">
                <div class="card public-profile border-0 rounded shadow" style="z-index: 1;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-2 col-md-3 text-md-start text-center">
                                <img src="/images/Default/logo.jpg" class="avatar avatar-large rounded-circle shadow d-block mx-auto" alt="">
                            </div>

                            <div class="col-lg-10 col-md-9">
                                <div class="row align-items-end">
                                    <div class="col-md-7 text-md-start text-center mt-4 mt-sm-0">
                                        <h3 class="title mb-0">@Model.UserName</h3>
                                        <small class="text-muted h6 me-2">@Model.RegisterDate.ToShamsi()</small>
                                        <small class="text-muted h6 me-2">موجودی کیف پول : @Model.Wallet.ToString("#,0")</small>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>