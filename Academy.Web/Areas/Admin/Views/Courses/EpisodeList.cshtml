@model List<Academy.Domain.ViewModels.Courses.CourseEpisodeDetailViewModel>
@{
    ViewData["Title"] = "لیست قسمت های دوره";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="card-body">

    <div class="row">


        <div class="col-sm-6 col-md-12">

            <table class="table table-bordered table-striped dataTable" role="grid">
                <thead>
                    <tr role="row">
                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">نام قسمت</th>
                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">زمان </th>
                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">رایگان</th>
                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">دستورات</th>

                    </tr>
                </thead>
                @if (Model.Count > 0)
                {
                    @foreach (var episode in Model)
                    {
                        <tbody>
                            <tr role="row" class="odd">
                                <td>
                                    @episode.EpisodeTitle
                                </td>

                                <td>@episode.EpisodeTime</td>

                                <td>
                                    @if (episode.IsFree == true)
                                    {
                                        <i class="fa fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times text-danger"></i>
                                    }
                                </td>


                                <td>
                                    <a asp-area="Admin" asp-controller="Courses" asp-action="EditEpisode" asp-route-Id="@episode.Id" class="btn btn-warning btn-sm">ویرایش</a>
                                </td>
                            </tr>
                        </tbody>
                    }



                }
                else
                {
                    <p class="text text-danger"> برای این دوره هنوز قسمتی ثبت نشده است</p>
                }


                <tfoot>

                </tfoot>
            </table>

        </div>

    </div>

</div>

