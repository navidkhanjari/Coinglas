@model Academy.Domain.ViewModels.Wallet.ChargeWalletViewModel
@{
    ViewData["Title"] = "شارژ کیف پول";
}
@await Component.InvokeAsync("AccountHeader")
<section class="section mt-60">
    <div class="container mt-lg-3">
        <div class="row">

            <div class="col-lg-12 col-md-12">

                <div class="border-bottom pb-4">
                    <div class="row">

                        <partial name="_AccountDashbord" />
                        <div class="col mt-6 pt-2" id="forms">
                            <div class="component-wrapper rounded shadow">
                                <div class="p-4 border-bottom">
                                    <h4 class="title mb-0"> @ViewData["Title"] </h4>
                                </div>

                                <div class="p-4">
                                    <form method="post" asp-controller="Wallet" asp-action="ChargeWallet">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label"> مبلغ مورد نظر به ریال <span class="text-danger">*</span></label>
                                                    <div class="form-icon position-relative">

                                                        <input asp-for="Amount" class="form-control ps-5">
                                                    </div>
                                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <input type="submit" class="btn btn-primary" value="شارژ حساب ">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>