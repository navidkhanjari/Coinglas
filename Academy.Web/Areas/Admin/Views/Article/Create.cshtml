@model Academy.Domain.ViewModels.Article.CreateArticleViewModel
@{
    ViewData["Title"] = "افزودن مقاله";
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script>



        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#ImageNameArticle').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#ImageName").change(function () {
            readURL(this);
        });
    </script>
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

    <script>

        CKEDITOR.replace('Description', {
            customConfig: '/lib/js/Config.js'
        });

    </script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <form asp-area="Admin" asp-controller="Article" asp-action="Create" class="form-horizontal" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="row">
                            <input type="hidden" value="@ViewData["UserId"]" asp-for="UserId" />
                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control">
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="Slug" class="col-sm-2 col-md-6 control-label"></label>
                                    <input asp-for="Slug" class="form-control">
                                </div>
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <img id="ImageNameArticle" class="img-thumbnail" style="max-height:100%; max-width:100%;" src="/images/Default/Investasi-bitcoin.jpg" />
                                <div class="form-group">
                                    <label asp-for="ImageName" class="col-sm-2 control-label"></label>
                                    <input asp-for="ImageName" class="form-control">
                                </div>
                                <span asp-validation-for="ImageName" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label asp-for="ShortDescription" class="col-sm-2 control-label"></label>
                                    <textarea asp-for="ShortDescription" class="form-control"></textarea>
                                </div>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>متن مقاله</label>
                                    <textarea asp-for="Description" rows="10" style="width: 100%"></textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="col-md-12">

                            <button type="submit" class="btn btn-info btn-block">ثبت اطلاعات</button>

                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>