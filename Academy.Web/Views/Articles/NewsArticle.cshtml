@model Academy.Domain.ViewModels.Article.ShowArticleViewModel
@using Academy.Application.Utils.Convertors;
@using Academy.Application.FilePath;

@{
    ViewData["Title"] = Model.Title;
    var siteUrl = ViewData["SiteUrl"];
    var postUrl = $"{siteUrl}/post/{Model.Slug}";
}

@await Component.InvokeAsync("SiteHeader")
<section class="bg-half d-table w-100" style="background: url('/images/Default/articles-bg.jpg') center center;">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="page-next-level">
                    <h3 class="title text-white title-dark"><a class="text-center text-light" asp-area="" asp-controller="Home" asp-action="Index">آکادمی کوین گلس</a></h3>
                    <div class="page-next">
                        <nav aria-label="breadcrumb" class="d-inline-block">
                            <ul class="breadcrumb bg-white rounded shadow mb-0">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">کوین گلس </a></li>
                                <li class="breadcrumb-item"><a asp-controller="articles" asp-action="Index">مقالات </a></li>
                                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>


<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-2 d-none d-md-block">
                        <ul class="list-unstyled text-center sticky-bar social-icon mb-0">
                            <li class="mb-3 h6">اشتراک </li>
                            <li><a href="https://www.facebook.com/sharer/sharer.php?u=@postUrl" class="rounded"><i data-feather="facebook" class="fea icon-sm fea-social"></i></a></li>
                            <li><a href="https://twitter.com/intent/tweet?url=@postUrl" class="rounded"><i data-feather="twitter" class="fea icon-sm fea-social"></i></a></li>
                       
                        </ul>
                    </div>
                    <div class="col-md-10">
                        <p class="text-muted">@Model.ShortDescription</p>
                        <ul class="list-unstyled d-flex justify-content-between mt-4">
                            <li class="list-inline-item user me-2"><a href="javascript:void(0)" class="text-muted"><i class="uil uil-user text-dark"></i> @ViewData["Author"]</a></li>
                            <li class="list-inline-item date text-muted"><i class="uil uil-calendar-alt text-dark"></i>@Model.CreateDate.ToShamsi()</li>
                        </ul>
                        <img src="@(FilePaths.ArticlePath + Model.ImageName)" class="img-fluid rounded-md shadow">            
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@await Component.InvokeAsync("SiteFooter")

