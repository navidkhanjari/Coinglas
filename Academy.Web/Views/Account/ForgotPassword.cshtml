@model Academy.Domain.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}
<div class="back-to-home rounded d-none d-sm-block">
    <a asp-controller="Home" asp-action="Index" class="btn btn-icon btn-soft-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home icons"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a>
</div>
@if (ViewBag.IsSuccess == true)
{
    <div class="container">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
         ایمیلی جهت بازیابی کلمه عبور برای شما ارسال گردید.
            ممکن است ایمیل ارسالی در پوشه اسپم شما قرار گرفته باشد!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="بستن"></button>
        </div>
    </div>
}
<section class="bg-home d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-6">
                <div class="me-lg-5">
                    <img src="site/images/user/recovery.svg" class="img-fluid d-block mx-auto" alt="">
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center"> @ViewData["Title"] </h4>

                        <form class="login-form mt-4" method="post" asp-controller="Account" asp-action="ForgotPassword">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-muted">لطفا آدرس ایمیل خود را وارد کنید. پیوندی برای ایجاد گذرواژه جدید از طریق ایمیل دریافت خواهید کرد.</p>
                                    <div class="mb-3">
                                        <label class="form-label">آدرس ایمیل <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail fea icon-sm icons"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                            <input asp-for="Email" class="form-control ps-5" placeholder="آدرس ایمیل خود را وارد کنید">

                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="d-flex justify-content-between">
                                        <div class="mb-3">
                                            <div class="g-recaptcha" data-sitekey="6Le3ArsdAAAAAIHWn_GqySB1yBob6jGkEWvuGviF"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary">ارسال </button>
                                    </div>
                                </div>

                                <div class="mx-auto">
                                    <p class="mb-0 mt-3"><small class="text-dark me-2">رمز عبور خود را به خاطر می آورید؟</small> <a asp-area="" asp-controller="Account" asp-action="login" class="text-dark fw-bold">وارد شوید </a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js?hl=fa" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}
